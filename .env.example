# ============================================
# AGENT AUTÔNOMO — CONFIGURAÇÃO
# ============================================
# Copie este arquivo para .env e preencha os valores
# cp .env.example .env

# ============================================
# MODELO LOCAL (Ollama)
# ============================================
AI_API_URL=https://ai.bolla.network/api/generate
AI_API_CONTENT_TYPE=application/json
AI_API_MODEL=llama3.2:3b
AI_API_STREAM=false
AI_TIMEOUT_MS=30000
AI_RETRY_ATTEMPTS=3

# ============================================
# ANTHROPIC (Claude) — AI para tarefas complexas
# ============================================
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxx
ANTHROPIC_MODEL=claude-3-5-sonnet-latest
ANTHROPIC_MAX_TOKENS=1024

# ============================================
# GROK — AI alternativa
# ============================================
GROK_API_KEY=xai-xxxxxxxxxxxxxxxxxxxxx
GROK_API_URL=https://api.x.ai/v1/chat/completions
GROK_MODEL=grok-2
GROK_MAX_TOKENS=1024

# ============================================
# POSTGRESQL
# ============================================
DATABASE_URL=postgresql://user:password@localhost:5432/agent_db

# ============================================
# DONO — Identificação do owner
# ============================================
OWNER_WHATSAPP=5511999999999
OWNER_TELEGRAM_ID=123456789
OWNER_NAME=Lucas

# ============================================
# TELEGRAM BOT
# ============================================
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=123456:ABC-DEF1234ghIkl-zyx57W2v1u123ew11

# ============================================
# WHATSAPP (Baileys)
# ============================================
WHATSAPP_ENABLED=false
WHATSAPP_AUTH_DIR=data/whatsapp-auth

# ============================================
# X/TWITTER (Cookies de sessão)
# ============================================
# Extrair cookies do navegador após login no X
# Extensão recomendada: "EditThisCookie" ou "Cookie-Editor"
TWITTER_ENABLED=false
TWITTER_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWITTER_CT0=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWITTER_USERNAME=seu_username
TWITTER_HEADLESS=true
TWITTER_COOKIES_PATH=data/twitter/cookies.json
TWITTER_AUTONOMOUS_ENABLED=false

# ============================================
# COMPORTAMENTO DO AGENT
# ============================================
# Intervalo de estudo em minutos
STUDY_INTERVAL_MIN=30
STUDY_AUTONOMOUS_ENABLED=false
# Intervalo de postagem no X em minutos
POST_INTERVAL_MIN=120
# Intervalo de check de menções em minutos
MENTIONS_CHECK_MIN=60
SELF_IMPROVEMENT_ENABLED=false
SELF_IMPROVEMENT_MAX_FILES=20
SELF_IMPROVEMENT_MAX_SUGGESTIONS=3
ANALYTICS_AUTONOMOUS_ENABLED=false
ANALYTICS_INTERVAL_MIN=180
OLLAMA_MIN_INTERVAL_MS=200
ANTHROPIC_MIN_INTERVAL_MS=500
GROK_MIN_INTERVAL_MS=500
TWITTER_API_MIN_INTERVAL_MS=1200
HEALTHCHECK_ENABLED=true
HEALTHCHECK_INTERVAL_MIN=5
MAINTENANCE_ENABLED=true
BACKUP_ENABLED=false
BACKUP_INTERVAL_HOURS=24
BACKUP_DIR=data/backups
BACKUP_RETENTION_DAYS=14
CLEANUP_ENABLED=true
CLEANUP_INTERVAL_HOURS=12
CLEANUP_TRAINING_RETENTION_DAYS=30
CLEANUP_QUALITY_THRESHOLD=0.45
HIVE_ENABLED=false
HIVE_BIND_HOST=0.0.0.0
HIVE_PORT=8787
HIVE_AGENT_NAME=bolla-main
HIVE_AGENT_ROLE=generalist
HIVE_SHARED_TOKEN=
HIVE_PEERS_JSON=[]
HIVE_REQUEST_TIMEOUT_MS=45000

# ============================================
# AMBIENTE
# ============================================
NODE_ENV=production
LOG_LEVEL=info
